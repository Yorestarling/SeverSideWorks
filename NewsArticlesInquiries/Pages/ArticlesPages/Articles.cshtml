@page
@model NewsArticlesInquiries.Pages.ArticlesPages.ArticlesModel

@{
    ViewData["Title"] = "Articles";
}

<h1>Articles</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Descriptions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Ulr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].UlrToImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].PublishedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Countries)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Article[0].Sources)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Article) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriptions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ulr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UlrToImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Countries.ContriesName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sources.SourcesName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ArticleId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ArticleId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ArticleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
