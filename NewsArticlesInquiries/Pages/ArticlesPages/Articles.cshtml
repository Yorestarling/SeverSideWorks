@page
@model NewsArticlesInquiries.Pages.ArticlesPages.ArticlesModel

@{
    ViewData["Title"] = "Articles";
}

<div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/Sliders/nba-top-show-news-8-lucky-nba-top-shot-collectors-get-epic-reward-for-game-5-of-the-nba-finals-1024x576.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="/Sliders/maxresdefault.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="/Sliders/news_1920x1080.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 mt-3">
        <form method="get">
            <div class="form-row">
                <div class="col-3">
                    <div class="form-group">
                        <input name="search" value="@ViewData["search"]" />
                        <button class="btn btn-primary" type="submit">SEARCH</button>
                        <p>Search by Author</p>
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group">
                        <input name="Searchcat" value="@ViewData["searchcat"]" />
                        <button class="btn btn-primary" type="submit">SEARCH</button>
                        <p>Search by Category</p>
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group">
                        <input name="searchcou" value="@ViewData["searchcou"]" />
                        <button class="btn btn-primary" type="submit">SEARCH</button>
                        <p>Search by Country</p>
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group">
                        <input name="Searchsou" value="@ViewData["searchsou"]" />
                        <button class="btn btn-primary" type="submit">SEARCH</button>
                        <p>Search by Source</p>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@foreach (var item in Model.Article)
{
    <div class="form-row">
        <div class="col-12">
            <div class="container5">
                <div class="card mt-5 form-group" style="width: 40rem; ">
                    <img src="@Url.Content(item.UlrToImage)" class="card-img-top" alt="...">
                    @*<p>@Html.DisplayFor(modelItem => item.Title)</p>*@
                    <div class="card-mb-4">
                        <div class="card-body form-group">
                            <h6 class="card-title ">@Html.DisplayFor(modelItem => item.Title)</h6>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Content)</p>
                        </div>
                        <div>
                            <p class="card-text ">@Html.DisplayFor(modelItem => item.PublishedAt) </p>
                            <p class="card-text ">@Html.DisplayFor(modelItem => item.Author) </p>
                            <a href="@Html.DisplayFor(modelItem => item.Ulr)" class="btn btn-primary">Show More</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


