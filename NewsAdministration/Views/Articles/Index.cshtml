@model IEnumerable<NewsAdministration.Article>

@{
    ViewData["Title"] = "Author List";
}
<div class="d-flex align-items-center">
    <div class="flex-grow-1">
        <h1 class="mt-3">AUTHOR AND ARTICLES LIST </h1>
    </div>
    <div>
        <a href="@Url.Action("Create")" class="btn btn-primary ">NEW ARTICLE</a>
    </div>
</div>

<div>
    <form method="get">

        <input name="Search" value="@ViewData["search"]" />
        <button class="btn btn-primary" type="submit">SEARCH</button>
    </form>
    <p>Search by Author or Source</p>
</div>
<table class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                Published At
            </th>
            <th>
                Sources Name
            </th>
            <th>
                Category Name
            </th>
            <th>
                Countries Name
            </th>

            <th>Tools</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublishedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sources.SourcesName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Countries.ContriesName)
                </td>

                <td>
                    <a class="text-white" asp-action="Edit" asp-route-id="@item.ArticleId">Edit</a> |
                    <a class="text-white" asp-action="Details" asp-route-id="@item.ArticleId">Details</a> |
                    <a class="text-white" asp-action="Delete" asp-route-id="@item.ArticleId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>