@model IEnumerable<NewsAdministration.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex align-items-center">
    <div class="flex-grow-1">
        <h1 class="mt-3">CATEGORIES LIST</h1>
    </div>
    <div>
        <a href="@Url.Action("Create")" class="btn btn-primary ">NEW CATEGORY</a>
    </div>
</div>

<div>
    <form method="get">

        <input name="Search" value="@ViewData["search"]" />
        <button class="btn btn-primary" type="submit">SEARCH</button>
    </form>
    <p>Search by Category</p>
</div>
<table class="table table-dark table-sm">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>Tools</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a class="text-white"  asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                    <a class="text-white"  asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                    <a class="text-white"  asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
