@model NewsAdministration.Country

@{
    ViewData["Title"] = "Edit Country";
}

<h4 class="mt-4">Edit Country</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CountriesId" />
            <div class="form-group">
                <label asp-for="ContriesName" class="control-label font-weight-bold">Country Name</label>
                <input asp-for="ContriesName" class="form-control" />
                <span asp-validation-for="ContriesName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
