@model IEnumerable<NewsAdministration.Source>

@{
    ViewData["Title"] = "Source";
}
<div class="d-flex align-items-center">
    <div class="flex-grow-1">
        <h1 class="mt-3">SOURCES LIST</h1>
    </div>
    <div>
        <a href="@Url.Action("Create")" class="btn btn-primary ">NEW SOURCE</a>
    </div>
</div>

<div>
    <form method="get">

        <input name="Search" value="@ViewData["search"]" />
        <button class="btn btn-primary" type="submit">SEARCH</button>
    </form>
    <p>Search by Source</p>
</div>
<table class="table table-dark table-sm">
    <thead>
        <tr>
            <th>
             Sources Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SourcesName)
                </td>
                <td>
                    <a class="text-white" asp-action="Edit" asp-route-id="@item.SourcesId">Edit</a> |
                    <a class="text-white" asp-action="Details" asp-route-id="@item.SourcesId">Details</a> |
                    <a class="text-white" asp-action="Delete" asp-route-id="@item.SourcesId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
